---
import Layout from '~/layouts/PageLayout.astro';

import type { ImageMetadata } from 'astro';
import karnevalPhoto from '~/assets/images/mia/foto/Aalborg festival/Karneval_-15.jpg';
import fotoreportageFrilagret from '~/assets/images/mia/foto/Fotoreportage - Frilagret/Mia_Svensson_Kortreportage_02jpg.jpg';
import introFotoUtstallning from '~/assets/images/mia/Foto/Fotoutställning - Göteborgs Universitet/baby on motobike.jpg';
import introSwinburne from '~/assets/images/mia/Foto/Swinburne Unversitet - Porträtt/103836907_Svensson_Mia_PhotoAss.Photo 8_MS copy.jpg';
import miaInIndia from '~/assets/images/mia/mia-in-india.jpg';
import miaProfile from '~/assets/images/mia/profile-no-bg.png';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Content from '~/components/widgets/Content.astro';
import Features3 from '~/components/widgets/Features3.astro';
import GaleryButton from '~/components/widgets/GaleryButton.astro';
import Header from '~/components/widgets/Header.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import { headerData } from '~/navigation';
import Logos from '~/components/widgets/Logos.astro';

const imagesAalborgFestival = import.meta.glob<{ default: ImageMetadata }>(
  '/src/assets/images/mia/Foto/Aalborg festival/*.{jpeg,jpg,png,gif}'
);
const imagesFotoUtstallning = import.meta.glob<{ default: ImageMetadata }>(
  '/src/assets/images/mia/Foto/Fotoutställning - Göteborgs Universitet/*.{jpeg,jpg,png,gif}'
);
const imagesSwinburne = import.meta.glob<{ default: ImageMetadata }>(
  '/src/assets/images/mia/Foto/Swinburne Unversitet - Porträtt/*.{jpeg,jpg,png,gif}'
);
const imagesFrilagret = import.meta.glob<{ default: ImageMetadata }>(
  '/src/assets/images/mia/Foto/Fotoreportage - Frilagret/*.{jpeg,jpg,png,gif}'
);

const metadata = {
  title: 'Mia Svensson',
};
const miaMailTo = 'mailto:minna.svensson1@gmail.com';
---

<Layout metadata={metadata}>
  <Fragment slot="announcement"></Fragment>
  <Fragment slot="header">
    <Header
      {...headerData}
      actions={[
        {
          text: 'Låt oss prata',
          href: miaMailTo,
        },
      ]}
      position="left"
      isSticky
      showToggleTheme
    />
  </Fragment>

  <!-- Hero2 Widget ******************* -->

  <Hero2
    id="hero"
    tagline="Freelance Journalist"
    actions={[{ variant: 'primary', text: 'Låt oss prata', href: miaMailTo }]}
    image={{
      src: miaProfile,
      alt: 'Mia Profile',
    }}
  >
    <Fragment slot="title"> Mia Svensson </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        Jag är en <span class="font-semibold">frilansjournalist</span> som brinner för att berätta historier som engagerar
        och inspirerar.
      </span>
      Med min passion för skrivande och min kreativa ådra skapar jag innehåll som berör och sätter avtryck.
    </Fragment>
  </Hero2>

  <!-- Content Widget **************** -->

  <Logos>
    <Fragment slot="title"> Uppdragsgivare: </Fragment>
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Logos>

  <Content
    id="about"
    isReversed
    columns={3}
    items={[
      {
        icon: 'tabler:brand-spotify',
        callToAction: {
          target: '_blank',
          text: 'Spotify',
          href: 'https://open.spotify.com/show/4vLmISJW3dYqLc66bwXbTM',
        },
      },
      {
        icon: 'tabler:brand-linkedin',
        callToAction: {
          target: '_blank',
          text: 'LinkedIn',
          href: 'https://www.linkedin.com/in/minna-svensson-24176b296/?originalSubdomain=se',
        },
      },
      {
        icon: 'tabler:mail',
        callToAction: {
          target: '_blank',
          text: 'Email',
          href: miaMailTo,
        },
      },
    ]}
    image={{
      src: miaInIndia,
      alt: 'Closeup Picture of Mia',
      loading: 'eager',
    }}
  >
    <Fragment slot="content">
      <h2 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Om mig</h2>
      <p>Jag är en frilansjournalist med en passion för att berätta engagerande och inspirerande historier. Med min</p>
      <br />
      <p>
        Det är min övertygelse att varje historia har potential att beröra och förändra, och jag strävar efter att skapa
        innehåll som sätter avtryck och väcker känslor.
      </p>
      <br />
      <p>
        Kolla gärna in mina senaste artiklar på min blogg och låt dig inspireras av mina berättelser. Om du är
        intresserad av att samarbeta eller anlita mig för ett uppdrag, tveka inte att kontakta mig.
      </p>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    id="porfolio"
    title="Mina senaste fotoprojekt"
    subtitle="Jag tycker om att berätta historier genom bilder och visuellt innehåll. Utforska mina senaste fotoprojekt nedan."
    isReversed
    image={{
      src: karnevalPhoto,
      alt: 'Photo from Aalborg Karneval',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        <span class="text-2xl">Aalborg carneval</span>
      </h3>
      <GaleryButton imagesObj={imagesAalborgFestival} />
    </Fragment>
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isReversed
    isAfterContent={true}
    image={{
      src: introFotoUtstallning,
      alt: 'Foto Utstallning',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        <span class="text-2xl">Fotoutställning - Göteborgs Universitet</span>
      </h3>
      <GaleryButton imagesObj={imagesFotoUtstallning} />
    </Fragment>
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isReversed
    isAfterContent={true}
    image={{
      src: fotoreportageFrilagret,
      alt: 'Fotoreportage Frilagret',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        <span class="text-2xl">Fotoreportage Frilagret</span>
      </h3>
      <GaleryButton imagesObj={imagesFrilagret} />
    </Fragment>
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <Content
    isReversed
    isAfterContent={true}
    image={{
      src: introSwinburne,
      alt: 'Swinburne Unversitet - Porträtt',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        <span class="text-2xl">Swinburne Unversitet - Porträtt</span>
      </h3>
      <GaleryButton imagesObj={imagesSwinburne} />
    </Fragment>
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Steps Widget ****************** -->

