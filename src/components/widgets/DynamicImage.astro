---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  imageName: string;
}

const { imageName } = Astro.props as Props;

const imagesGlob = import.meta.glob<{ default: ImageMetadata }>('/src/assets/images/publiceradi/*.{jpeg,jpg,png,gif}');
const imageSrc = '/src/assets/images/publiceradi/' + imageName;
---

<Image src={imagesGlob[imageSrc]()} alt="Gallery image" class="object-contain max-w-[300px] max-h-[300px] px-3" />
